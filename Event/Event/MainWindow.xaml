<Window x:Class="Event.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event"
        mc:Ignorable="d"
        Title="MainWindow" Height="830" Width="830">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="357*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="686*"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,0,5.4,0.2">
            <Grid>
                <Button x:Name="Server" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="106" Margin="1,1,1,1" Click="OpenButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
